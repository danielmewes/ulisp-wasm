{
  "name": "ulisp-wasm",
  "version": "4.7.0",
  "type": "module",
  "scripts": {
    "start": "concurrently --names web,wasm 'bun run dev' 'bun run dev:wasm'",
    "dev": "roll dev",
    "build": "roll build && bun run build:web && bun run build:node && bun run build:wasi",
    "build:web": "bun build.ts build:web && sudo chown -R $USER:$USER docs/ulisp.wasm",
    "build:node": "mkdir -p node && bun run build.ts build:node && sudo chown -R $USER:$USER node",
    "build:wasi": "mkdir -p wasi && bun build.ts build:wasi && sudo chown -R $USER:$USER wasi",
    "emcc": "docker compose run --remove-orphans --rm builder emcc",
    "emcc:down": "docker compose down --remove-orphans",
    "emcc:remove": "docker compose down --rmi local",
    "dev:wasm": "chokidar \"src/*.c\" \"src/*.h\" --initial --silent --command 'bun run build:web'",
    "dev:wasm:node": "chokidar \"src/*.c\" \"src/*.h\" --initial --silent --command 'bun run build:node && bun tests/index.ts'",
    "test": "bun run tests/index.ts",
    "test:dev": "chokidar \"tests/**/*.ts\" --initial --silent --command 'bun tests/index.ts'",
    "tdd": "concurrently --names wasm,test 'bun run dev:wasm:node' 'bun run test:dev'",
    "serve": "roll serve",
    "update": "git-subrepo pull builder"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.0",
    "@codemirror/language": "^6.11.0",
    "@codemirror/lint": "^6.8.4",
    "@codemirror/merge": "^6.10.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.4",
    "@lezer/lr": "^1.4.2",
    "@preact/signals": "^2.0.1",
    "codemirror": "^6.0.1",
    "preact": "^10.25.4"
  },
  "devDependencies": {
    "@nextjournal/lang-clojure": "^1.0.0",
    "@tangible/git-subrepo": "^1.0.1",
    "@tangible/roller": "^2.1.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "testra": "^2.1.5"
  }
}